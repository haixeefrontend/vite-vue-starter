[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
root = true
tab_width = 4

[*.vue,*.js,*.jsx,*.ts,*.tsx,*.css,*.scss,*.sass,*.less,*.styl]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

[*.json]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
